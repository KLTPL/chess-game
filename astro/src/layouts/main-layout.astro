---
import Nav from "../components/nav/Nav.astro";
import "../styles/styles.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="absolute left-0 top-0 h-full min-h-[100vh] overflow-x-hidden">
    <div
      data-page-container
      class="flex h-full w-full flex-col items-center bg-bg1 text-text1"
    >
      <Nav />
      <slot />
    </div>
  </body>
</html>
